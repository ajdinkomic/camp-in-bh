<% include ../partials/header %>
<section id="edit-review-section">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-12 mt-5">
        <h1 class="text-center">Uređivanje recenzije</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 offset-lg-2 mt-5">
        <h6>Ocjena</h6>
        <form action="/campgrounds/<%=campground_slug%>/reviews/<%=review.id%>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="first-rate5"
              title="5 zvjezdica - Odlično"><%- '<span class="fas fa-star checked-star"></span>'.repeat(5) %></label>
            <input type="radio" class="form-control" id="first-rate5" value="5" name="review[rating]" <%if(review.rating === 5){%>checked<%}%>>
        </div>
        <div class="form-group">
          <label for="first-rate4"
            title="4 zvjezdice - Veoma dobro"><%- '<span class="fas fa-star checked-star"></span>'.repeat(4) %></label>
              <input type="radio" class="form-control" id="first-rate4" value="4" name="review[rating]" <%if(review.rating === 4){%>checked<%}%>>
        </div>
        <div class="form-group">
          <label for="first-rate3"
            title="3 zvjezdice - Prosječno"><%- '<span class="fas fa-star checked-star"></span>'.repeat(3) %></label> <input
              type="radio" class="form-control" id="first-rate3" value="3" name="review[rating]" <%if(review.rating === 3){%>checked<%}%>>
        </div>
        <div class="form-group">
          <label for="first-rate2"
            title="2 zvjezdice - Loše"><%- '<span class="fas fa-star checked-star"></span>'.repeat(2) %></label> <input
              type="radio" class="form-control" id="first-rate2" value="2" name="review[rating]" <%if(review.rating === 2){%>checked<%}%>>
        </div>
        <div class="form-group">
          <label for="first-rate1" title="1 zvjezdica - Jako loše"><span class="fas fa-star checked-star"></span></label>
          <input type="radio" class="form-control" id="first-rate1" value="1" name="review[rating]" <%if(review.rating === 1){%>checked<%}%>>
        </div>
        <div class="form-group">
            <textarea name="review[text]" type="text" id="review-text" cols="30" rows="5"
              class="form-control" placeholder="Napišite recenziju za ovaj kamp"><%=review.text%></textarea>
          </div>
          <div class="form-group mt-5">
            <input type="submit" value="Spremi" class="btn btn-custom btn-greenish-full btn-block">
          </div>

        </form>
        <div class="text-center">
          <a href="/campgrounds/<%= campground_slug %>">Nazad na kamp</a>
        </div>
      </div>
    </div>
  </div>
</section>

<% include ../partials/footer-scripts-only %>