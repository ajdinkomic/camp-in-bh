<% include ./partials/header %>

<section id="login-page-section">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center mt-5">
                <h1>Prijava</h1>
            </div>
            <div class="col-lg-8 offset-lg-2 text-center mt-5">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Korisničko ime" title="Korisničko ime" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Lozinka" title="Lozinka" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-custom btn-greenish-full btn-block" type="submit">Prijava</button>
                    </div>
                </form>
                <a href="/forgot">Zaboravili ste lozinku?</a>
            </div>
        </div>
    </div>
</section>

