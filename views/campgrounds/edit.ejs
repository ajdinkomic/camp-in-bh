<% include ../partials/header %>
    <section id="edit-campground-section">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12 text-center mt-5">
                    <h1>Uređivanje kampa: <%=campground.name%>
                    </h1>
                </div>
                <div class="col-lg-8 offset-lg-2 mt-4">
                    <form action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Naziv kampa</label>
                            <input type="text" class="form-control" value="<%= campground.name %>" id="name"
                                name="campground[name]" required>
                        </div>
                        <div class="form-group">
                            <label for="street">Adresa</label>
                            <input type="text" class="form-control" value="<%= campground.street %>"
                                name="campground[street]" id="street" placeholder="<%= campground.street %>" required>
                        </div>
                        <div class="form-group">
                            <label for="streetNumber">Broj ulice</label>
                            <input type="text" class="form-control" value="<%= campground.streetNumber %>"
                                name="campground[streetNumber]" id="streetNumber"
                                placeholder="<%= campground.streetNumber %>" required>
                        </div>
                        <div class="form-group">
                            <label for="city">Grad</label>
                            <input type="text" class="form-control" value="<%= campground.city %>"
                                name="campground[city]" id="city" placeholder="<%= campground.city %>" required>
                        </div>
                        <div class="form-group">
                            <label for="postalCode">Poštanski broj</label>
                            <input type="text" class="form-control" value="<%= campground.postalCode %>"
                                name="campground[postalCode]" id="postalCode" placeholder="<%= campground.postalCode %>"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="price">Cijena noćenja (KM)</label>
                            <input type="number" class="form-control" id="price" value="<%= campground.price %>"
                                name="campground[price]" min="0" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="image">Slika</label>
                            <input type="file" name="image" id="image" accept="image/*">
                        </div>
                        <div class="form-group">
                            <label for="description">Opis</label>
                            <textarea name="campground[description]" type="text" id="description" cols="30" rows="5"
                                class="form-control" required><%= campground.description %></textarea>
                        </div>
                        <div class="form-group mt-5">
                            <button class="btn btn-custom btn-greenish-full btn-block">Spremi</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a href="/campgrounds/<%= campground.slug %>">Nazad na kamp</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% include ../partials/footer-scripts-only %>